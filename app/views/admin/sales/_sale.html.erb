<tr>
  
  <td>
    <h4><%= sale.name %></h4>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.finished? %>
      <span class="alert-danger">Finished</span>
    <% elsif sale.upcoming? %>
      <span class="alert-warning"">Upcoming</span>
    <% else %>
      <span class="alert-success">Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>%
    
  </td>
  <td></td>
</tr>